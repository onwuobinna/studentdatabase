<div class="badge-base LI-profile-badge" data-locale="en_US" data-size="medium" data-theme="dark" data-type="VERTICAL" data-vanity="samuel-nzubechi" data-version="v1"><a class="badge-base__link LI-simple-link" href="https://ng.linkedin.com/in/samuel-nzubechi?trk=profile-badge">Samuel Chukwuma</a></div>
              
<h3><a class="btn btn-secondary" href="/student">Create New</a>  <a href="/student/list">Student List</a></h3>
<table class="table table-striped"style="margin-left:-1rem ;">
    <thead>
        <tr>
            <th>fullname</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>city</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            
            <td>
                <a class="btn btn-primary btn-sm" href="/student/{{this.id}}">Edit</a>
            </td>
            <td >
                 <a class="btn btn-primary btn-sm" href="/student/delete/{{this.id}}"
                onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>